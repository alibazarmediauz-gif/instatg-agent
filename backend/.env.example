# ============================================
# InstaTG Agent â€” Environment Configuration
# ============================================

# --- Application ---
APP_NAME=InstaTG Agent
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production

# --- Database (PostgreSQL / Supabase) ---
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/instatg_agent
DATABASE_ECHO=false

# --- Redis (Upstash or local) ---
REDIS_URL=redis://localhost:6379/0

# --- Claude API (Anthropic) ---
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxx
CLAUDE_MODEL=claude-sonnet-4-5-20250514

# --- OpenAI (Whisper STT + Embeddings) ---
OPENAI_API_KEY=sk-xxxxxxxxxxxxx
WHISPER_MODEL=whisper-1
EMBEDDING_MODEL=text-embedding-3-small

# --- LLM Provider (optional) ---
# Set to 'openai' (default), or 'openrouter' / 'huggingface' if you configure those
LLM_PROVIDER=openai
OPENROUTER_API_KEY=
HUGGINGFACE_API_KEY=

# --- Pinecone (Vector DB for RAG) ---
PINECONE_API_KEY=xxxxxxxxxxxxx
PINECONE_INDEX_NAME=instatg-knowledge
PINECONE_ENVIRONMENT=us-east-1

# --- Telegram (Pyrogram Userbot) ---
TELEGRAM_API_ID=12345678
TELEGRAM_API_HASH=your-api-hash-here

# --- Meta (Instagram & Facebook Graph API) ---
META_APP_ID=xxxxxxxxxxxxx
META_APP_SECRET=xxxxxxxxxxxxx
META_VERIFY_TOKEN=your-webhook-verify-token
PUBLIC_BASE_URL=https://instatg-agent-production.up.railway.app
FRONTEND_URL=https://your-frontend.vercel.app
ENCRYPTION_KEY=your-32-byte-fernet-key
GRAPH_API_VERSION=v19.0

# --- AmoCRM ---
AMOCRM_BASE_URL=https://yourdomain.amocrm.ru
AMOCRM_CLIENT_ID=xxxxxxxxxxxxx
AMOCRM_CLIENT_SECRET=xxxxxxxxxxxxx
AMOCRM_REDIRECT_URI=https://yourdomain.com/api/crm/callback
AMOCRM_ACCESS_TOKEN=
AMOCRM_REFRESH_TOKEN=

# --- Celery ---
CELERY_BROKER_URL=redis://localhost:6379/1

# --- Report Settings ---
DAILY_REPORT_HOUR=9
DAILY_REPORT_TIMEZONE=Asia/Tashkent

# --- Supabase Auth ---
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_ANON_KEY=xxxxxxxxxxxxx
SUPABASE_SERVICE_ROLE_KEY=xxxxxxxxxxxxx
